<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.j0n4than.ex.community.mappers.BuildingMapper">

    <resultMap id="buildingVo" type="cn.j0n4than.ex.community.pojo.vo.BuildingVo">
        <id property="id" column="b.id"/>
        <result property="name" column="b.name"/>
        <result property="villageName" column="v.name"/>
    </resultMap>

    <select id="selectByName" resultType="cn.j0n4than.ex.community.pojo.vo.BuildingVo">
        SELECT `b`.`id` as `id`, `b`.`name` as `name`, `period`, `lift`, `v`.`name` as villageName, `property`
        FROM `con_building` as `b`
        LEFT JOIN `con_village` as `v` ON `b`.`villageid` = `v`.`id`
        <where>
            <if test="name != null and name != ''">
                `b`.`name` LIKE '%${name}%'
            </if>
        </where>
    </select>
</mapper>
